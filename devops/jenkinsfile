pipeline {
  agent any
    // this image provides everything needed to run Cypress
    docker {
      image 'cypress/base:10'
    }
    environment {
        CHROME_BIN = '/bin/google-chrome'
    }
    stages {
        stage('Dependencies') {
            steps {
                sh 'npm i'
            }
        }
        stage('e2e Tests') {
            steps {
                sh 'npm run test'
            }
        }
    }
}