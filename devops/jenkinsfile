pipeline {
  agent { 
    // this image provides everything needed to run Cypress
    docker {
      image 'cypress/base:10'
    }
  }
    environment {
        CYPRESS_CACHE_FOLDER ='/var/lib/jenkins/workspace/automacao_cypress/.cache/Cypress/8.6.0/Cypress/Cypress'
    }
    stages {
        stage('e2e Tests') {
            steps {
                sh 'npm run test'
            }
        }
    }
}