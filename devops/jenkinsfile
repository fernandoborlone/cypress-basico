pipeline {
  agent { 
    // this image provides everything needed to run Cypress
    docker {
      image 'cypress/base:10'
    }
  }
    environment {
        CYPRESS_CACHE_FOLDER ='/home/jenkins/.cache/Cypress/8.6.0/Cypress/Cypress'
    }
    stages {
        stage('e2e Tests') {
            steps {
                echo 'rodar os teste de UI'
                 sh """
                  docker run --rm --network host \
                 -i $DOCKER_BUILD_TAG \
                 npm run test
                """            }
        }
    }
}